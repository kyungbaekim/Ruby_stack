<div class='wrapper'>
  <div class='top'>
    <div class='username'>
      <h2>Welcome <%= session[:user_name] %>!</h2>
    </div>
    <div class='logout'>
      <a href='/users/<%= session[:user_id] %>/edit'>Edit Profile</a>&emsp;
      <a href='/sessions/<%= session[:user_id] %>' data-method='delete'><button>Log Out</button></a>
    </div>
  </div>
  <div class='user_form'>
    <% if flash[:failed] %>
      <p><font color='red'><%= flash[:failed] %></font></p>
    <% end %>
    <form action='/users/update' method='post'>
      <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
      <input type="hidden"name="_method"value="patch">
      <table>
        <tr>
          <td>Email</td><td><input type='text' name='user[email]' value='<%= @user.email %>'></td>
        </tr>
        <tr>
          <td>Name</td><td><input type='text' name='user[name]' value='<%= @user.name %>'></td>
        </tr>
        <!-- <tr>
          <td>Password</td><td><input type='password' name='user[password]' value='<%= @user.password %>'></td>
        </tr>
        <tr>
          <td>Password Confirmation</td><td><input type='password' name='user[password_confirmation]' value='<%= @user.password %>'></td>
        </tr> -->
        <tr>
          <td colspan='2' align='right'><input type='submit' value='Update'></td>
        </tr>
        <% if flash[:email] && flash[:email] != 0 %>
          <tr>
            <td colspan='2'><span>Email <%= flash[:email][0] %></span></td>
          </tr>
        <% end %>
        <% if flash[:name] && flash[:name] != 0 %>
          <tr>
            <td colspan='2'><span>Name <%= flash[:name][0] %></span></td>
          </tr>
        <% end %>
        <!-- <% if flash[:password] && flash[:password] != 0 %>
          <tr>
            <td colspan='2'><span>Password <%= flash[:password][0] %></span></td>
          </tr>
        <% end %>
        <% if flash[:password_confirmation] && flash[:password_confirmation] != 0 %>
          <tr>
            <td colspan='2'><span>Confirmed password <%= flash[:password_confirmation][0] %></span></td>
          </tr>
        <% end %> -->
      </table>
    </form>
    <a href="/users/<%= session[:user_id]%>" data-method='delete'> <button>Delete Account!</button></a>
  </div>
</div>
