<div class='wrapper'>
  <div class='users'>
    <h1>New User</h1>
    <form action='/users/update' method='post'>
      <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
      <input name="user[id]" value="<%= @user.id %>" type="hidden">
      <p>First name<br><input type='text' name='user[first_name]' value='<%= @user.first_name %>'></p>
      <p>Last name<br><input type='text' name='user[last_name]' value='<%= @user.last_name %>'></p>
      <p>Email<br><input type='text' name='user[email_address]' value='<%= @user.email_address %>'></p>
      <p>Password<br><input type='password' name='user[password]' value='<%= @user.password %>'></p>
      <input type='submit' value='Update'>
    </form>
    <p><a href='/users/<%= @user.id %>'>Show</a>&nbsp;|&nbsp;<a href='/users'>Go back</a></p>
  </div>
</div>
