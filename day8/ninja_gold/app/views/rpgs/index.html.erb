<div class='wrapper'>
  <div class='gold'>
    <p>Your Gold:&nbsp;<input type='text' value='<%= session[:gold] %>'>&emsp;
    <a href='/destroy'><button>Reset Game!!!</button></a></p>
  </div>
  <div class='play'>
    <div class='option'>
      <h2>Farm</h2>
      <p>(earns 10-20 golds)</p><br>
      <form action='/farm' method='post'>
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <input type='submit' value='Find Gold!'>
      </form>
    </div>
    <div class='option'>
      <h2>Cave</h2>
      <p>(earns 5-10 golds)</p><br>
      <form action='/cave' method='post'>
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <input type='submit' value='Find Gold!'>
      </form>
    </div>
    <div class='option'>
      <h2>House</h2>
      <p>(earns 2-5 golds)</p><br>
      <form action='/house' method='post'>
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <input type='submit' value='Find Gold!'>
      </form>
    </div>
    <div class='option'>
      <h2>Casino</h2>
      <p>(earns/takes 0-50 golds)</p><br>
      <form action='/casino' method='post'>
        <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
        <input type='submit' value='Find Gold!'>
      </form>
    </div>
  </div>
  <div class='activity'>
    Activities:<br>
    <textarea>
      <% if session[:activities] != [] %>
        <% session[:activities].each do |activity| %>
          <%= activity %>
        <% end %>
      <% end %>
    </textarea>
  </div>
</div>
