<h1>Upload an image:</h1>

<%= form_for @user, :url => users_path, :html => {:multipart => true} do |f| %>
  <%= f.label :Your_Name %><br>
  <%= f.text_field :name %><br><br>
  <%= f.label :Image %><br>
  <%= f.file_field :avatar %><br><br>
  <%= f.label :Description %><br>
  <%= f.text_area :description %><br>
  <%= f.submit :submit %>
<% end %>
